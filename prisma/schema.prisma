generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  fid                 Int          @id
  username            String
  displayName         String
  avatarUrl           String?
  walletAddress       String?
  notificationDetails String?
  createdAt           DateTime     @default(now())
  collections         Collection[]

  @@map("users")
}

model Song {
  id         Int          @id
  title      String
  startDate  String
  endDate    String
  createdAt  DateTime     @default(now())
  collectors Collection[]

  @@map("songs")
}

// Join table to establish many-to-many relationship
model Collection {
  user        User     @relation(fields: [userId], references: [fid])
  userId      Int
  song        Song     @relation(fields: [songId], references: [id])
  songId      Int
  collectedAt DateTime @default(now())

  @@id([userId, songId])
  @@map("collections")
}

model RedactedSong {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  @@map("redacted_songs")
}
